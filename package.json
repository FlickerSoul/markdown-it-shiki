{
  "name": "markdown-it-shiki",
  "version": "0.1.0",
  "description": "Markdown It plugin for Shiki",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "bugs": {
    "url": "https://github.com/antfu/markdown-it-shiki/issues"
  },
  "homepage": "https://github.com/antfu/markdown-it-shiki#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/markdown-it-shiki.git"
  },
  "keywords": [
    "markdown-it",
    "markdown-it-plugin",
    "highlight",
    "shiki"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "watch": "npm run build -- --watch",
    "dev": "esno src/index.ts",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "publish:ci": "npm publish --access public",
    "release": "npx bumpp --commit --push --tag && npm run publish:ci"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@antfu/shiki": "^0.6.0",
    "deasync": "^0.1.21",
    "debug": "^4.3.1"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.4.3",
    "@types/deasync": "^0.1.1",
    "@types/debug": "^4.1.5",
    "@types/markdown-it": "^10.0.3",
    "@types/node": "^14.14.20",
    "eslint": "^7.17.0",
    "esno": "^0.2.4",
    "markdown-it": "^12.0.4",
    "tsup": "^3.11.0",
    "typescript": "^4.1.3"
  }
}
